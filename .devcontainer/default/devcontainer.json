// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerComposeFile": "docker-compose.yaml",
	"service": "devcontainer",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"shutdownAction": "none",
	"runServices": ["devcontainer"],
	"customizations": {
		"vscode": {
			"extensions": [
				// programming languages
				"golang.go",
				// pythonは言語 + linter + formatter
				"ms-python.python",
				"ms-python.black-formatter",
				"ms-python.pylint",
				// js/tsは言語 + linter/formatter
				"oven.bun-vscode",
				"biomejs.biome",
				// leanもいつか触りたい
				"leanprover.lean4",
				// juliaはjitなのでpythonより速い
				"julialang.language-julia",

				// other markup languages
				"svelte.svelte-vscode",
				"bierner.markdown-mermaid",
				"tamasfe.even-better-toml",
				"jebbs.plantuml",
				"jock.svg",

				// その他
				"ms-toolsai.jupyter",
				"ms-azuretools.vscode-docker",
				"ms-vscode.live-server",
				"statelyai.stately-vscode",
				"mongodb.mongodb-vscode"
			]
		}
	},
	"features": {
		// miseでgo入れて拡張機能の指示でその他のツール入れた方が速い
		// "ghcr.io/devcontainers/features/go:1": {},
	},
	"remoteEnv": {
		"PATH": "/home/vscode/.local/share/mise/shims:${containerEnv:PATH}"
	},
	"initializeCommand": "/bin/sh .devcontainer/default/initializeCommand.sh",
	"postCreateCommand": "/bin/sh .devcontainer/postCreateCommand.sh"
}
